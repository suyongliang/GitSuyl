<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huaxia.hpn.hpnapp.com.huaxia.hpn.user.LoginActivity"
    tools:showIn="@layout/activity_login">

      <com.huaxia.hpn.headerview.MyToolBar
          android:id="@+id/myToolBar"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          custom:leftButtonBackground="@color/wheat"
          custom:leftButtonText="返回"
          custom:leftButtonTextColor="#000000"
          custom:leftButtonTextSize="6sp"
          custom:rightButtonBackground="@color/wheat"
          custom:rightButtonText="菜单"
          custom:rightButtonTextColor="#000000"
          custom:rightButtonTextSize="6sp"
          custom:textTitle="MyTitle"
          custom:titleTextColor="#000000"
          custom:titleTextSize="8sp"
          custom:titleBackground="@color/wheat"
          android:background="#ea8010"
          android:padding="10sp">
      </com.huaxia.hpn.headerview.MyToolBar>

</RelativeLayout>
