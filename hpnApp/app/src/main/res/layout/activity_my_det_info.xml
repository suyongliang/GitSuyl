<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_det_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.huaxia.hpn.user.MyDetInfoActivity">
    <include layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="73dp"></include>

    <RelativeLayout
        android:id="@+id/accountRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="用户名"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/accountEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@id/account"
            android:focusable="false"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userNameRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="姓名"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/userName"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwdRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="密码"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/pwdEdittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/pwd"
            android:focusable="false"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwdRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="手机号"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/phone"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="邮箱"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/email"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sexRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailRel"
        android:clickable="true"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="性别"
            android:textColor="#000"
            android:textSize="17sp" />

        <RadioGroup android:id="@+id/radioGroup"
            android:contentDescription="性别"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/sex"
            android:layout_marginLeft="20dip"
            android:gravity="center_horizontal" >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioMale"
                android:text="男" android:checked="true">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioFemale"
                android:text="女">
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/birthdayRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="出生年月"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/birthdayTextView"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/birthday"
            android:background="@null"
            android:textSize="15sp" />
        <Button android:id="@+id/setDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/birthdayTextView"
            android:text="选择日期"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/occupationRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthdayRel"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="职业"
            android:textColor="#000"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/occupationEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_toRightOf="@id/occupation"
            android:background="@null"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/logout_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupationRel"
        android:text="@string/action_logout"
        android:textStyle="bold" />

</RelativeLayout>
