<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1">

      <LinearLayout
          android:id="@+id/layout_login"
          android:layout_width="fill_parent"
          android:layout_height="150dp"
          android:background="@color/peachpuff"
          android:gravity="center_horizontal"
          android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:background="@drawable/login" />
            <TextView
                android:id="@+id/user_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:onClick="tvClickListener"
                android:text="点击登录"/>
      </LinearLayout>
      <LinearLayout style="@style/wrap_layout"
          android:layout_width="fill_parent"
          android:background="@color/lemonchiffon"
          android:gravity="center_vertical"
          android:orientation="vertical" >
            <LinearLayout style="@style/top_layout">
                  <TextView
                      android:id="@+id/my_footmark"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="我的足迹"
                      android:clickable="true"
                      android:onClick="tvClickListener"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <LinearLayout style="@style/mid_layout">
                  <TextView
                      android:id="@+id/my_comment"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="我的评论"
                      android:clickable="true"
                      android:onClick="tvClickListener"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <LinearLayout style="@style/bottom_layout">
                  <TextView
                      android:id="@+id/my_info"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="我的资料"
                      android:clickable="true"
                      android:onClick="tvClickListener"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
      </LinearLayout>
      <LinearLayout style="@style/wrap_layout"
          android:layout_width="fill_parent"
          android:background="@color/lemonchiffon"
          android:gravity="center_vertical"
          android:orientation="vertical" >
            <LinearLayout style="@style/top_layout">
                  <TextView
                      android:id="@+id/questionnaire"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="问卷调查"
                      android:clickable="true"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <LinearLayout style="@style/mid_layout">
                  <TextView
                      android:id="@+id/abountWe"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="关于我们"
                      android:clickable="true"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
            <View style="@style/bg_line"/>
            <LinearLayout style="@style/bottom_layout">
                  <TextView
                      android:id="@+id/clear_cache"
                      android:layout_width="wrap_content"
                      style="@style/usertext"
                      android:text="清除缓存"
                      android:clickable="true"/>
                  <ImageView style="@style/img_arrow"/>
            </LinearLayout>
      </LinearLayout>
</LinearLayout>
